<div class="container">
  <div class="separator">
    <p id="random-text"></p>
  </div>
</div>

<style>
  .container {
    width: 100%;
    height: 100%;
    padding: 3px;
    border-radius: 8px;
    border: 3px solid var(--text-color);
  }

  .separator {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    border-radius: 3px;
    background-color: var(--text-color);
  }

  .separator p {
    font-family: "ABeeZee", Verdana;
    font-size: clamp(1rem, 2vw, 1.2rem);
    font-weight: 900;
    line-height: 1;
    letter-spacing: 0.3px;
    text-align: center;
    color: var(--bg-color);
  }
</style>

<script>
  const renderPhrase = () => {
    let phrases = [
      "Me encanta One Piece",
      "Desarrollador independiente",
      "Kaizoku-ou ni ore wa naru!!",
      "¿Cuándo muere un hombre?",
      "Un hombre muere cuando es olvidado.",
      "Sé que algún día me pagarán por hacer esto.",
      "Para arreglar el bug, hay qeu psaren ocmo gub, bug esr le.",
      "Espero que se renderice una frase seria en un momento serio.",
    ];

    const randomText = document.getElementById("random-text");

    if (!randomText) return null;

    let random = Math.floor(Math.random() * phrases.length);
    let randomTextPhrase = phrases[random];

    randomText.textContent = randomTextPhrase;
  };

  renderPhrase();
</script>
