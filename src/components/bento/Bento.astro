---
import About from "./elements/about/About.astro";
import Carrousel from "./elements/Carrousel.astro";
import Gif from "./elements/Gif.astro";
import Phrases from "./elements/Phrases.astro";
import DrawMini from "./elements/DrawMini.astro";
import Skills from "./elements/skills/Skills.astro";
import Projects from "./elements/projects/Projects.astro";
import Networks from "./elements/Networks.astro";
---

<main class="bento">
  <section class="card item-about"><About aviability={true} /></section>
  <section class="card item-carrousel"><Carrousel /></section>
  <section class="card item-gif"><Gif /></section>
  <section class="card item-mini-draw"><DrawMini /></section>
  <section class="card item-projects"><Projects /></section>
  <section class="card item-skills"><Skills /></section>
  <section class="card item-network"><Networks /></section>
  <section class="card item-phrases"><Phrases /></section>
</main>

<style>
  .bento {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin: 8px;
  }
  .card {
    min-height: 0;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-radius: 8px;
    background-color: var(--color-surface);
    box-shadow: var(--shadow-4);
    border: 1px solid var(--color-surface);
  }

  .item-gif {
    display: none;
  }

  .item-mini-draw {
    display: none;
  }

  :root[data-theme="dark"] .card {
    border: 1px solid var(--divisor);
  }

  @media (min-width: 768px) {
    .bento {
      scrollbar-gutter: auto;
      display: grid;
      gap: 0.5rem;
      margin: 8px 64px;
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: repeat(11, minmax(0, 1fr));
    }
    .item-about {
      grid-column: 1 / 4;
      grid-row: 1 / 7;
    }
    .item-carrousel {
      grid-column: 1 / 5;
    }
    .item-phrases {
      display: block;
      grid-column: 1 / 5;
    }
    .item-gif {
      display: block;
      grid-column-start: 4;
      grid-row: 1/4;
    }
    .item-mini-draw {
      display: none;
    }
    .item-skills {
      grid-column: 1 / 3;
      grid-row: 8/11;
    }
    .item-projects {
      grid-column: 3 / 5;
      grid-row: 8/11;
    }
    .item-network {
      grid-column: 4 / 4;
      grid-row: 4/7;
    }
  }
  @media (min-width: 1024px) {
    .bento {
      display: grid;
      margin: 12px 128px;
      gap: 1rem;
      grid-template-columns: repeat(9, 1fr);
      grid-template-rows: repeat(9, minmax(0, 1fr));
    }
    .item-about {
      grid-column: 1 / 6;
      grid-row: 1/7;
    }
    .item-carrousel {
      grid-row-start: 9;
      grid-column: 6 / 10;
    }
    .item-phrases {
      grid-column: 6 / 9;
    }
    .item-gif {
      grid-column: 6/9;
      grid-row: 2/5;
    }

    .item-mini-draw {
      display: block;
      grid-column: 1 / 1;
      grid-row: 7/10;
    }

    .item-skills {
      grid-column: 2/6;
      grid-row: 7/10;
    }

    .item-projects {
      grid-column: 6 / 10;
      grid-row: 5/9;
    }
    .item-network {
      grid-column: 9 / 10;
      grid-row: 1/5;
    }
  }
</style>
