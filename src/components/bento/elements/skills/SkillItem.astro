---
const { title, description } = Astro.props;
---

<div class="skill-item">
  <div class="skill-icon">
    <div class="icon" id="Dawn-color">
      <slot />
    </div>
  </div>

  <div class="skill-text">
    <p class="skill-name">{title}</p>
    <p class="skill-description footnote muted">{description}</p>
  </div>
</div>

<style>
  .skill-item {
    margin: 4px 0px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .skill-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4px;
    background-color: var(--color-surface-2);
    border-radius: 4px;
    box-shadow: var(--shadow-4);
    border: 1px solid var(--color-surface);
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  :root[data-theme="dark"] .skill-icon {
    border: 1px solid var(--divisor);
  }

  .skill-text {
    line-height: 1;
  }

  .footnote {
    font-size: var(--font-size-0);
  }
</style>
