---
import type { Project } from "../../types/projectType";

const { title, description, image, tech, year, status } = Astro.props;
---

<article class="project-card">
  <img src={image} alt={title} loading="lazy" />

  <div class="content">
    <p class="date">{year}</p>
    <div class="head">
      <h3>{title}</h3>
      {
        status && (
          <span class="badge" id="Dawn">
            {status}
          </span>
        )
      }
    </div>

    <p class="description">{description}</p>

    <ul class="tech">
      {tech.map((item: Project) => <li>{item}</li>)}
    </ul>
  </div>
</article>

<style>
  .project-card {
    background: var(--bg-second-surface);
    color: var(--text-color);
    border-radius: 5px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .project-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .project-card .content {
    display: flex;
    flex-direction: column;
    text-wrap: pretty;
    padding: 0.5rem 1.5rem;
  }

  .project-card .content .head {
    display: flex;
    font-family: "ABeeZee", Verdana;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
    text-wrap: pretty;
  }

  .project-card .content .head .badge {
    background-color: var(--color-surface);
    padding: 0.5rem 1em;
    border-radius: 5px;
  }

  .project-card h3 {
    font-family: "Satoshi", Verdana, sans-serif;
    font-size: 1.4rem;
    max-width: 70%;
  }

  .project-card .description {
    font-family: "ABeeZee", Verdana;
    font-size: 0.95rem;
    opacity: 0.8;
    line-height: 1.4;
    margin-bottom: 0.5rem;
  }

  .date {
    font-family: "Satoshi", Verdana, sans-serif;
    align-self: flex-end;
    font-size: 0.8rem;
    margin-bottom: 0.3rem;
    color: var(--transparent);
  }

  .tech {
    font-family: "ABeeZee", Verdana;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
  }

  .tech li {
    font-size: 0.75rem;
    padding: 0.3rem 0.7rem;
    border-radius: 5px;
    background: var(--color-surface);
  }
</style>
