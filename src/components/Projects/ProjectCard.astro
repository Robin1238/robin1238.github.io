---
import Arrow from "../../assets/images/svgs/Arrow.svg";
const {
  title,
  description,
  image,
  year,
  status,
  ref = { link: "/projects", show: false },
} = Astro.props;
---

<div class="card">
  <div class="image-container">
    {status && <span>{status}</span>}
    <img src={image} alt={title} loading="lazy" />
  </div>

  <div class="content-container">
    <div class="header">
      <h2 class="title">{title}</h2>
      <p class="badge">{year}</p>
    </div>

    <p class="description">
      {description}
    </p>

    {
      ref.show && (
        <a href={`${ref.link}`} target="_blank">
          <div class="button">
            <span>Ver proyecto</span>

            <Arrow />
          </div>
        </a>
      )
    }
  </div>
</div>

<style>
  .card {
    max-width: 480px;
    margin: 0 auto;
    background-color: var(--bg-surface);
    border-radius: 8px;
    padding: 6px;
    display: flex;
    flex-direction: column;
    box-shadow: var(--shadow-4);
    border: 1px solid var(--bg-surface);
  }

  :root[data-theme="dark"] .card {
    border: 1px solid var(--divisor);
  }

  .image-container {
    position: relative;
    display: grid;
    place-content: center;
    overflow: hidden;
    position: relative;
    aspect-ratio: 16 / 9;
    width: 100%;
  }

  .image-container img {
    border-radius: 10px;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-container span {
    font-family: "ABeeZee";
    position: absolute;
    inset: 6px 6px auto auto;
    background-color: var(--accent);
    color: var(--color-text-inverse);
    padding: 12px;
    border-radius: 8px;
    font-size: var(--font-size-0);
    font-weight: 700;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header .title {
    width: 80%;
    font-family: "ABeeZee";
    font-size: var(--font-size-2);
    font-weight: 700;
  }

  .header .badge {
    background-color: var(--bg-glass);
    padding: 6px;
    border-radius: 4px;
    color: var(--transparent);
    font-weight: 500;
    font-size: var(--font-size-1);
  }

  .content-container {
    /* max-height: 220px; */
    padding: 6px;
    gap: 12px;
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .description {
    scrollbar-color: var(--color-text) var(--bg-surface-2-glass);
    opacity: 0.8;
    font-weight: 500;
    min-height: 40px;
    overflow-y: auto;
    padding-right: 6px;
  }

  .button {
    background-color: var(--accent);
    color: var(--bg-surface-2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    gap: 4px;
    padding: 4px 10px;
    border-radius: 4px;
    text-align: center;
    box-shadow: var(--shadow-4);
    transition: opacity 0.2s ease;

    &:hover {
      opacity: 0.5;
    }
  }
</style>
